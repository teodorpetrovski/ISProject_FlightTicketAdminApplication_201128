@model List<TicketShopAdminApplication.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


 


    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th></th>
           
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No Users </td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Email</td>
                            <td>@item.Role.ToString()</td>
                            <td>
                                <form asp-action="ChangeRole">
                                   
                                    <input type="hidden" asp-for=@item.Email name="Email"/>
                                    <div class="form-group">
                                        <select class="form-control" id="Role" name="Role">
                                            <option>STANDARD</option>
                                            <option>ADMIN</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="submit" value="Change Role" class="btn btn-primary" />
                                    </div>
                                </form>
                            </td>
                          
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

   


</div>